<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="SIM Card Manager"
            app:titleTextColor="@android:color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:id="@+id/actionContainerSimCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSwitchSim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Switch SIM"
            android:textAllCaps="false"
            app:icon="@android:drawable/ic_menu_rotate"
            style="@style/Widget.Material3.Button" />
    </LinearLayout>
    <!-- SIM Cards Section -->
    <TextView
        android:id="@+id/tvSimSectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIM Cards"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/actionContainerSimCard"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSimCards"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:clipToPadding="false"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvSimSectionTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.4"
        tools:listitem="@layout/item_sim_card_info" />

    <ProgressBar
        android:id="@+id/progressBarSim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/recyclerViewSimCards"
        app:layout_constraintEnd_toEndOf="@id/recyclerViewSimCards"
        app:layout_constraintStart_toStartOf="@id/recyclerViewSimCards"
        app:layout_constraintTop_toTopOf="@id/recyclerViewSimCards" />

    <TextView
        android:id="@+id/tvSimEmptyState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No SIM cards found"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/recyclerViewSimCards"
        app:layout_constraintEnd_toEndOf="@id/recyclerViewSimCards"
        app:layout_constraintStart_toStartOf="@id/recyclerViewSimCards"
        app:layout_constraintTop_toTopOf="@id/recyclerViewSimCards" />

    <!-- Selected Plan Display -->
    <TextView
        android:id="@+id/tvSelectedPlan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/selected_plan_background"
        android:padding="12dp"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/recyclerViewSimCards"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Action Buttons -->
    <LinearLayout
        android:id="@+id/actionContainerPlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvSelectedPlan">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRefreshPlans"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="Refresh Plans"
            android:textAllCaps="false"
            app:icon="@drawable/ic_menu_refresh"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClearSelection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Clear Selection"
            android:textAllCaps="false"
            app:icon="@android:drawable/ic_menu_close_clear_cancel"
            style="@style/Widget.Material3.Button.OutlinedButton" />

    </LinearLayout>

    <!-- Telecom Plans Section -->
    <TextView
        android:id="@+id/tvPlansSectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telecom Plans"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/actionContainerPlan"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTelecomPlans"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvPlansSectionTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_telecom_plan" />

    <ProgressBar
        android:id="@+id/progressBarPlans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/recyclerViewTelecomPlans"
        app:layout_constraintEnd_toEndOf="@id/recyclerViewTelecomPlans"
        app:layout_constraintStart_toStartOf="@id/recyclerViewTelecomPlans"
        app:layout_constraintTop_toTopOf="@id/recyclerViewTelecomPlans" />

    <TextView
        android:id="@+id/tvPlansEmptyState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No telecom plans available"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/recyclerViewTelecomPlans"
        app:layout_constraintEnd_toEndOf="@id/recyclerViewTelecomPlans"
        app:layout_constraintStart_toStartOf="@id/recyclerViewTelecomPlans"
        app:layout_constraintTop_toTopOf="@id/recyclerViewTelecomPlans" />

</androidx.constraintlayout.widget.ConstraintLayout>